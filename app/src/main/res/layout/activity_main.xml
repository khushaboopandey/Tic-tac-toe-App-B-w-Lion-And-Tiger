<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#021619"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F69402"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/lion" />

        <ImageView
            android:id="@+id/lion5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:tag="4"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/lion2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:tag="1"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/lion9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/lion4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:tag="3"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/lion3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/lion1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:tag="0"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/lion7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/lion8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/lion6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:alpha="0.2"
            android:background="#000000"
            android:onClick="imageViewIsTapped"
            android:padding="5dp"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="210dp"
        android:layout_height="52dp"
        android:layout_marginTop="84dp"
        android:background="#F69402"
        android:gravity="center_horizontal|center_vertical"
        android:text="Lion Or Tiger"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#101010"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="210dp"
        android:layout_height="52dp"
        android:layout_marginTop="84dp"
        android:background="#F69402"
        android:gravity="center_horizontal|center_vertical"
        android:text="Reset the game"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#101010"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_Layout"
        app:layout_constraintVertical_bias="0.406" />

    <TextView
        android:id="@+id/winnerName"
        android:layout_width="210dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:background="#F69402"
        android:gravity="center_horizontal|center_vertical"
        android:text="bklm;lm;lm;l"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#101010"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>